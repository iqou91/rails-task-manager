<%= render "form", task: @task %>
<ul>
  <% if @tasks %>
    <% @tasks.each do |task| %>
      <li><%= link_to task.title, task_path(task) %></li>
      <li><%= link_to task.details, task_path(task) %></li>
      <li><%= task.completed ? "Completed" : "Not Completed" %></li>
    <% end %>
  <% end %>
</ul>
